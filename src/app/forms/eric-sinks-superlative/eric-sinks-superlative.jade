.form
  .background--image
    img(src="../../assets/images/home_background.png")
  .outer
    .middle.text-center
      .inner
        form(novalidate=true, name="uvpForm", ng-hide="ctrl.showUVP")
          .row
            .small-12.columns
              input(type="text", placeholder="Why choose this product", ng-model="ctrl.method.why", required=true)
          .row
            span.has-tip(data-tooltip, aria-haspopup=true, title= "Example unavailable") Example
            br
            button.button(ui-sref="MintoPyramid") Previous
            button.button(ng-disabled="!uvpForm.$valid", ng-click="ctrl.display()") Go
        .row(ng-show="ctrl.showUVP")
          h1 {{ctrl.method.template()}}
          button.button(ng-click="ctrl.back()") Back
.footer #6 Eric Sink's Value Positioning Superlative
