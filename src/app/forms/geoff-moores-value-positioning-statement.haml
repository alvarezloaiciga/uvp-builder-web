.form
  .form-content
    .outer
      .middle
        .inner.text-center
          %form{ "novalidate": true, "ng-hide": "ctrl.showUVP", "name": "uvpForm" }
            .row
              %input{ "type": "text", "placeholder": "For Target Consumer", "ng-model": "ctrl.form[0]", "required": true }
              %input{ "type": "text", "placeholder": "Who (statement of need or opportunity)", "ng-model": "ctrl.form[1]", "required": true }
              %input{ "type": "text", "placeholder": "our (product/service name) is (product category)", "ng-model": "ctrl.form[2]", "required": true }
              %input{ "type": "text", "placeholder": "that (statement of benefit)", "ng-model": "ctrl.form[3]", "required": true }
              %button.button{ "ng-disabled": "!uvpForm.$valid", "ng-click": "ctrl.display()" } Go
          .row{ "ng-show": "ctrl.showUVP" }
            %h1 {{ctrl.uvp}}
            %button.button{ "ng-click": "ctrl.back()" } Back
