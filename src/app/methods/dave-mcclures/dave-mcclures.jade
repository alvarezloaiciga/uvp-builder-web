form(novalidate=true, name="uvpForm", ng-hide="ctrl.showUVP")
  .row
    .small-10.columns.right
      input(type="text", placeholder="Product/service name", ng-model="ctrl.method.product", required=true)
  .row
    .small-2.columns
      label.right.inline(for="firstAdj") is
    .small-10.columns
      input#firstAdj(type="text", placeholder="first adjective", ng-model="ctrl.method.firstAdjective", required=true)
  .row
    .small-2.columns
      label.right.inline(for="secondAdj") and
    .small-10.columns
      input#secondAdj(type="text", placeholder="second adjective", ng-model="ctrl.method.secondAdjective", required=true)
  .row
    .small-2.columns
      label.right.inline(for="attribute") to
    .small-10.columns
      input#attribute(type="text", placeholder="best attribute", ng-model="ctrl.method.attribute", required=true)
  .row
    a._tooltip(title="{{ctrl.method.example}}") Example
    br
    button.button(ng-disabled="!uvpForm.$valid", ng-click="ctrl.display()") Watch
.row(ng-show="ctrl.showUVP")
  h1 {{ctrl.method.template()}}
  button.button(ng-click="ctrl.back()") Back
  .row
    i.fa.fa-arrow-right.fa-3x(ui-sref="DavidCowans")
      .icon-subtitle Next
.footer #5 Dave McClure's Elevator Ride
