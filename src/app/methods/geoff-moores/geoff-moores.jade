form(novalidate=true, name="uvpForm", ng-hide="ctrl.showUVP")
  .row
    .small-2.columns
      label.right.inline(for="customer") {{ 'geoffMoores.for' | i18n }}
    .small-10.columns
      input#customer(type="text", placeholder="{{ 'geoffMoores.placeholder1' | i18n }}", ng-model="ctrl.method.customer", required=true)
  .row
    .small-2.columns
      label.right.inline(for="need") {{ 'geoffMoores.who' | i18n }}
    .small-10.columns
      input#need(type="text", placeholder="{{ 'geoffMoores.placeholder2' | i18n }}", ng-model="ctrl.method.need", required=true)
  .row
    .small-2.columns
      label.right.inline(for="product") {{ 'geoffMoores.our' | i18n }}
    .small-10.columns
      input#product(type="text", placeholder="{{ 'geoffMoores.placeholder3' | i18n }}", ng-model="ctrl.method.product", required=true)
  .row
    .small-2.columns
      label.right.inline(for="category") {{ 'geoffMoores.is' | i18n }}
    .small-10.columns
      input#category(type="text", placeholder="{{ 'geoffMoores.placeholder4' | i18n }}", ng-model="ctrl.method.category", required=true)
  .row
    .small-2.columns
      label.right.inline(for="benefit") {{ 'geoffMoores.that' | i18n }}
    .small-10.columns
      input#benefit(type="text", placeholder="{{ 'geoffMoores.placeholder5' | i18n }}", ng-model="ctrl.method.benefit", required=true)
  .row
    a._tooltip(title="{{ctrl.method.example}}")
      span(title="") {{ 'common.example' | i18n }}
    br
    button.button(ng-disabled="!uvpForm.$valid", ng-click="ctrl.display()") {{ 'common.build' | i18n }}
.row(ng-show="ctrl.showUVP")
  h1 {{ctrl.method.template()}}
  br
  uvp-facebook-share-button
  br
  i.fa.fa-chevron-left.fa-2x(ng-click="ctrl.back()")
    .icon-subtitle {{ 'common.back' | i18n }}
  = ' '
  i.fa.fa-chevron-right.fa-2x(ui-sref="VentureHacks")
    .icon-subtitle {{ 'common.next' | i18n }}
.footer #1 Geoff Moore's Value Positioning Statement
