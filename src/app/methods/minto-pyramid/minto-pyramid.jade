form(novalidate=true, name="uvpForm", ng-hide="ctrl.showUVP")
  .row
    .small-12.columns
      input(type="text", placeholder="{{ 'mintoPyramid.placeholder1' | i18n }}", ng-model="ctrl.method.situation", required=true)
  .row
    .small-12.columns
      input(type="text", placeholder="{{ 'mintoPyramid.placeholder2' | i18n }}", ng-model="ctrl.method.issue", required=true)
  .row
    .small-12.columns
      input(type="text", placeholder="{{ 'mintoPyramid.placeholder3' | i18n }}", ng-model="ctrl.method.question", required=true)
  .row
    .small-12.columns
      input(type="text", placeholder="{{ 'mintoPyramid.placeholder4' | i18n }}", ng-model="ctrl.method.answer", required=true)
  .row
    a._tooltip(title="{{ctrl.method.example}}")
      span(title="") {{ 'common.example' | i18n }}
    br
    button.button(ng-disabled="!uvpForm.$valid", ng-click="ctrl.display()") {{ 'common.build' | i18n }}
.row(ng-show="ctrl.showUVP")
  h1 {{ctrl.method.template()}}
  br
  i.fa.fa-chevron-left.fa-2x(ng-click="ctrl.back()")
    .icon-subtitle {{ 'common.back' | i18n }}
  = ' '
  i.fa.fa-chevron-right.fa-2x(ui-sref="ElevatorPitch")
    .icon-subtitle {{ 'common.next' | i18n }}
.footer #11 The Minto Pyramid Principle aka SCQA
