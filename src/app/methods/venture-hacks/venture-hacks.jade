form(novalidate=true, name="uvpForm", ng-hide="ctrl.showUVP")
  .row
    .small-10.columns.right
      input(type="text", placeholder="{{ 'ventureHacks.placeholder1' | i18n }}", ng-model="ctrl.method.industryExample", required=true)
  .row
    .small-2.columns
      label.right.inline(for="attribute") {{ 'ventureHacks.for' | i18n }}
    .small-10.columns
      input#attribute(type="text", placeholder="{{ 'ventureHacks.placeholder2' | i18n }}", ng-model="ctrl.method.attribute", required=true)
  .row
    a._tooltip(title="{{ctrl.method.example}}")
      span(title="") {{ 'common.example' | i18n }}
    br
    button.button(ng-disabled="!uvpForm.$valid", ng-click="ctrl.display()") {{ 'common.build' | i18n }}
.row(ng-show="ctrl.showUVP")
  h1 {{ctrl.method.template()}}
  br
  i.fa.fa-chevron-left.fa-2x(ng-click="ctrl.back()")
    .icon-subtitle {{ 'common.back' | i18n }}
  = ' '
  i.fa.fa-chevron-right.fa-2x(ui-sref="SteveBlanks")
    .icon-subtitle {{ 'common.next' | i18n }}
.footer #2 Venture Hacks' High-Concept Pitch
