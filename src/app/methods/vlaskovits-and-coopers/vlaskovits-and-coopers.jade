form(novalidate=true, name="uvpForm", ng-hide="ctrl.showUVP")
  .row
    .small-12.columns
      input(type="text", placeholder="{{ 'vlaskovitsAndCoopers.placeholder1' | i18n }}", ng-model="ctrl.method.customer", required=true)
  .row
    .small-12.columns
      input(type="text", placeholder="{{ 'vlaskovitsAndCoopers.placeholder2' | i18n }}", ng-model="ctrl.method.problem", required=true)
  .row
    .small-12.columns
      input(type="text", placeholder="{{ 'vlaskovitsAndCoopers.placeholder3' | i18n }}", ng-model="ctrl.method.solution", required=true)
  .row
    br
    button.button(ng-disabled="!uvpForm.$valid", ng-click="ctrl.display()") {{ 'common.build' | i18n }}
.row(ng-show="ctrl.showUVP")
  h1 {{ctrl.method.template()}}
  br
  i.fa.fa-chevron-left.fa-2x(ng-click="ctrl.back()")
    .icon-subtitle {{ 'common.back' | i18n }}
  = ' '
  i.fa.fa-chevron-right.fa-2x(ui-sref="DaveMcClures")
    .icon-subtitle {{ 'common.next' | i18n }}
.footer #4 Vlaskovits & Cooper's CPS
