form(novalidate=true, name="uvpForm", ng-hide="ctrl.showUVP")
  .row
    .small-3.columns
      label.right.inline(for="category") {{ 'zagFormat.our' | i18n }}
    .small-9.columns
      input#category(type="text", placeholder="{{ 'zagFormat.placeholder1' | i18n }}", ng-model="ctrl.method.category", required=true)
  .row
    .small-3.columns
      label.right.inline.small-font(for="attribute") {{ 'zagFormat.only' | i18n }}
    .small-9.columns
      input#attribute(type="text", placeholder="{{ 'zagFormat.placeholder2' | i18n }}", ng-model="ctrl.method.attribute", required=true)
  .row
    a._tooltip(title="{{ctrl.method.example}}")
      span(title="") {{ 'common.example' | i18n }}
    br
    button.button(ng-disabled="!uvpForm.$valid", ng-click="ctrl.display()") {{ 'common.build' | i18n }}
    br
    uvp-clear-form-button
